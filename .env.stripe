# Stripe Payment Processing Fee Configuration
#
# Set to "true" to enable payment processing fee surcharge.
# When enabled, customers will pay an additional fee to cover Stripe's
# transaction costs (2.9% + $0.30 for card payments).
# Fee is calculated on pre-discount amount (before promo codes).
STRIPE_PROCESSING_FEE_ENABLED=true

# Stripe fee rate (default: 0.029 = 2.9% for card/ACH payments)
STRIPE_PROCESSING_FEE_RATE=0.029

# Stripe fixed fee per transaction (default: $0.30 for card/ACH)
STRIPE_PROCESSING_FEE_FIXED=0.30
